.order-container{
  display: flex;
  flex-direction: column;
  padding: 10px;
  border: 1px solid #ccc;
  margin: 10px;
  border-radius: 5px;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.time, .publisher, .amount, .status {
  font-size: 14px;
}

.description {
  flex: 1;
  margin-bottom: 10px;
}

.footer {
  text-align: right;
}

.publish-time {
  font-size: 12px;
  color: #888;
}